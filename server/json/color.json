{
    "form_name": "Создать класс",
    "form_description": "Выберите все параметры нового класса разметки",
    "form_fields": [
        {
            "id": "name",
            "type": "text",
            "label": "Название",
            "required": true,
            "placeholder": "Введите название",
            "maxlength": 30
        },
        {
            "id": "color",
            "type": "color",
            "label": "Цвет класса",
            "required": true,
            "options": ["#D9D9D9", "#A7A2A2", "#676666", "#3F3E3E", "#262626", "#141414", "#000000"]
        },
        {
            "id": "type",
            "type": "select",
            "label": "Тип класса",
            "required": true,
            "multiple": false,
            "options": ["Размер", "Форма", "Назначение"]
        }
    ],
    "form_buttons": [
        {
            "name": "Отмена",
            "type": "button"
        },
        {
            "name": "Создать",
            "type": "submit"
        }
    ]
}
