{
    "form_name": "Авторизация",
    "form_fields": [
        {
            "id": "login",
            "type": "text",
            "label": "Логин",
            "required": true,
            "placeholder": "Введите ваш логин",
            "maxlength": 30
        },
        {
            "id": "password",
            "type": "password",
            "label": "Пароль",
            "required": true,
            "placeholder": "Введите ваш пароль",
            "maxlength": 50,
            "minlength": 8,
            "pattern": "^(?=.*[a-zA-Z])(?=.*[0-9!@#$%^&*()]).{8,50}$"
        }
    ],
    "form_buttons": [
        {
            "name": "Войти",
            "type": "submit"
        }
    ]
}
